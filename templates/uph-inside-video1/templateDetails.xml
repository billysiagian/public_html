<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 1.6//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension
	version="1.7"
	method="upgrade"
	type="template"
	client="site">
	<name>UPH-Inside-Video1</name>
	<creationDate>08/08/11</creationDate>
	<author>Sugito Chen</author>
	<authorEmail>sugito.chen@uph.edu</authorEmail>
	<authorUrl>http://www.uph.edu</authorUrl>
	<copyright>Copyright (C) 1994 - 2011 Universitas Pelita Harapan. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later</license>
	<version>1.7.0</version>
	<description>TPL_UPH_INSIDE_VIDEO1_XML_DESCRIPTION</description>
	<files>
		<filename>index.php</filename>
		<filename>index.html</filename>
		<filename>error.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>favicon.ico</filename>
		<folder>images</folder>
		<folder>css</folder>
		<folder>language</folder>
		<folder>js</folder>
	</files>

	<positions>
		<position>googleanalytics</position>
		<position>noposition1</position>
	</positions>

	<!-- 	For core templates, we also install/uninstall the language files in the core language folders.
	-->
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_uph-inside-video1.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_uph-inside-video1.sys.ini</language>
		<language tag="id-ID">id-ID/id-ID.tpl_uph-inside-video1.ini</language>
		<language tag="id-ID">id-ID/id-ID.tpl_uph-inside-video1.sys.ini</language>
	</languages>
	
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="maintemplate"  type="text" default="uph-faculty1"
					label="TPL_UPH_INSIDE_VIDEO1_FIELD_MAINTEMPLATE_LABEL"
					description="TPL_UPH_INSIDE_VIDEO1_FIELD_MAINTEMPLATE_DESC"
					filter="string" />
				
				<field name="mainmenu"  type="text" default="menu1"
					label="TPL_UPH_INSIDE_VIDEO1_FIELD_MAINMENU_LABEL"
					description="TPL_UPH_INSIDE_VIDEO1_FIELD_MAINMENU_DESC"
					filter="string" />
			</fieldset>
		</fields>
	</config>

</extension>
